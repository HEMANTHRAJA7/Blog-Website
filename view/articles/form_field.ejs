<div class="form-group">
    <label for="title" class="texts text-muted mb-2">Title</label>
    <input required value="<%=article.title%>" type="text" name="title" class="form-control">
</div>
<div class="form-group mt-4">
    <label for="description" class="texts text-muted mb-2" >Description</label>
    <textarea name="description" id="description" class="form-control"><%=article.description%></textarea>
</div>
<div class="form-group mt-4" >
    <label for="markdown" class="texts text-muted mb-2">Markdown</label>
    <textarea required name="markdown" id="markdown" class="form-control" style="height: 30vh;"><%=article.markdown%></textarea>
</div>
<br>
<a href="/" class="btn button-click" style="background-color: rgba(128, 128, 128, 0.6);">Cancel</a>
<button type="submit" class="btn button-click" style="background-color: rgb(71, 224, 224);">Save</button>